apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: argocd
  namespace: argocd
spec:
  project: default
  source:
    repoURL: https://argoproj.github.io/argo-helm
    chart: argo-cd
    targetRevision: 6.9.3 
    helm:
      releaseName: argocd
      values: |
        server:
          service:
            type: LoadBalancer
          extraArgs:
            - --insecure          # serve UI over HTTP (matches what you used)
        configs:
          cm:
            admin.enabled: "true" # keep admin for now
          rbac:
            policy.default: role:readonly
        notifications:
          enabled: false          # can turn on later
        repoServer:
          replicas: 1
        applicationController:
          replicas: 1
        redis:
          enabled: true           # default single redis
        dex:
          enabled: true           # ready for SSO later
  destination:
    server: https://kubernetes.default.svc
    namespace: argocd
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true
